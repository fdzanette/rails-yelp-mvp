<div class="container">
  <div class="title">
  <h1>List of Restaurants</h1>
  </div>
  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Category</th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td><%= restaurant.category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<!--
  <p><%= link_to "Create new restaurant", new_restaurant_path %></p>

 -->
</div>
